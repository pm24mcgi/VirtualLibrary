@page
@model VirtualLibrary.Pages.Books.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

@if (Model.Book.CheckedOut == false)
{
    <h3>Confirm book deletion</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Author)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Author)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.ReleaseDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.ReleaseDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Description)
            </dd>
        </dl>
    
        <form method="post">
            <input type="hidden" asp-for="Book.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
}
else
{
    <h3>You cannot delete a book until it is returned</h3>
    <form method="post">
        <a asp-page="./Index">Back to List</a>
    </form> 
}
