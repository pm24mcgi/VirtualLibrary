@page
@model VirtualLibrary.Pages.Books.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

@if (Model.Book?.CheckedOut == false) 
{
    <div class="available">Available</div>
}
else
{
    <div class="notAvailable">Checked Out</div>
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>
        <dt class="col-sm-2">
            Release Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Description)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Librarian"))
    {
        <a asp-page="./Edit" asp-route-id="@Model.Book?.Id">Edit Details</a>
    } | 
    <a asp-page="./Index">Back to List</a>
</div>
