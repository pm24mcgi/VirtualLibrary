@page
@model VirtualLibrary.Pages.Books.StatusModel

@{
    ViewData["Title"] = "Status";
}

<h1>Please Confirm Action</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>
        <dt class="col-sm-2">
            Release Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Description)
        </dd>
    </dl>
</div>

@if (Model.Book?.CheckedOut == false)
{
    <div class="confirm">
        <button class="available">Check Out</button>
    </div>
}
else
{
    @if (User.IsInRole("Librarian"))
    {
        <div class="confirm">
            <button class="confirm notAvailable">Return</button>
        </div>
    }
}

<div>
    <a asp-page="./Index">Back to List</a>
</div>
